        //     }
        // }
        stage('Build Spring') {
            steps {
                dir('backend/spring') {
                    sh './gradlew clean build'
                }
            }
        }
        stage('Build Frontend') {
            steps {
                dir('frontend/here_law') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }
        stage('Build Fast_API') {
            steps {
                dir('backend/fastapi_ec2') {
                    sh 'pip install -r requirements.txt'
                    sh 'docker build -t fastapi-app .'
                }
            }
        }
        stage('Build Docker EC2 Services') {
            steps {
                sh 'docker-compose -f docker-compose.ec2.yml up --build -d'
            }
        }
        // stage('Deploy FastAPI to Remote Server') {
        //     steps {
        //         sshagent(['remote-server-credentials']) {
                    
        //             sh '''
        //             scp -r backend/fastapi/* user@<fastapi-server-ip>:/path/to/deploy/fastapi/
        //             ssh user@<fastapi-server-ip> "cd /path/to/deploy/fastapi && docker-compose -f docker-compose.fastapi.yml up --build -d"
        //             '''
        //         }
        //     }
        // }
        stage('Reload Nginx') {
            steps {
                dir('server') {
                    sh 'sudo nginx -s reload'
                }
            }
        }
    }
}